{
  "compilerOptions": {
    "target": "ES2020",          // Set the target version of JavaScript
    "module": "commonjs",        // Use CommonJS for modules (use "NodeNext" for ESM modules)
    "esModuleInterop": true,     // Enable compatibility with ES modules
    "skipLibCheck": true,        // Skip type checking of declaration files
    "outDir": "./dist",          // Output directory for compiled files
    "rootDir": "./src",          // Root directory for your TypeScript files
    "moduleResolution": "node",  // Resolve modules like Node.js
    "strict": true,              // Enable strict type checking
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"  // Include all TypeScript files in the 'src' folder
  ],
  "exclude": [
    "node_modules"  // Exclude 'node_modules' directory from compilation
  ]
}
